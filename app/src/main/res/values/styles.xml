<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleStyle">
        <item name="android:paddingBottom">@dimen/padding1</item>
        <item name="android:paddingLeft">@dimen/padding1</item>
        <item name="android:paddingTop">@dimen/padding1</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sectionStyle">
        <item name="android:paddingBottom">@dimen/padding1</item>
        <item name="android:paddingLeft">@dimen/padding1</item>
        <item name="android:paddingTop">@dimen/padding1</item>
        <item name="android:textSize">@dimen/sectionSize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="dateStyle">
        <item name="android:textSize">@dimen/urlSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="authorStyle">
        <item name="android:textSize">@dimen/urlSize</item>
        <item name="android:paddingTop">@dimen/padding1</item>

        <item name="android:textStyle">bold</item>
    </style>


    <style name="urlStyle">
        <item name="android:paddingBottom">@dimen/padding2</item>
        <item name="android:textSize">@dimen/urlSize</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
